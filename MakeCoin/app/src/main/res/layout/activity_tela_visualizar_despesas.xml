<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="0dp"
        android:layout_height="1000dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".view.CadastroUsuarios.CadastroUsuarios"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/retangulo_reto2"
                android:backgroundTint="#000044"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visualizar despesa"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textAlignment="center"
                android:layout_marginTop="30dp"/>
            <ImageView
                android:id="@+id/Ir_para_tela_principal"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/setaesquerda"
                app:tint="#ffff"
                android:layout_marginTop="35dp"
                android:layout_marginStart="20dp"
                />
            <ImageView
                android:id="@+id/Circulo_cor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/imagem_redonda"
                app:tint="#17C245"
                android:layout_marginTop="123dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="15dp"/>
            <ImageView
                android:id="@+id/categoria_de_salario"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/categoriasalario"
                android:layout_marginTop="130dp"
                android:layout_marginStart="33dp"
                android:layout_marginEnd="15dp"/>
            <TextView
                android:id="@+id/Nome_da_categoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:gravity="right"
                android:textSize="30dp"
                android:layout_marginEnd="20dp"/>
            <TextView
                android:id="@+id/Nome_do_favorecido_registro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/Nome_do_registro"
                android:gravity="center"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/opcao_recorrente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="170dp"
                android:gravity="left"
                android:textSize="15dp"
                android:layout_marginStart="25dp"
                />
            <TextView
                android:id="@+id/tempo_parcelas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="170dp"
                android:gravity="left"
                android:textSize="15dp"
                android:layout_marginStart="25dp"
                />
            <TextView
                android:id="@+id/Nome_do_registro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="190dp"
                android:gravity="center"
                android:textSize="30dp"
                />
            <TextView
                android:id="@+id/Valor_do_registro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="290dp"
                android:gravity="left"
                android:textSize="20dp"
                android:layout_marginStart="20dp"/>
            <TextView
                android:id="@+id/Valor_do_registro_mensal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="290dp"
                android:gravity="left"
                android:textSize="20dp"
                android:layout_marginStart="20dp"/>
            <TextView
                android:id="@+id/data_do_registro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="290dp"
                android:gravity="right"
                android:textSize="20dp"
                android:layout_marginEnd="20dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="330dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Já paguei"
                android:layout_marginTop="370dp"
                android:textSize="35dp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"/>
            <Switch
                android:id="@+id/toggleSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="380dp"
                android:layout_marginStart="330dp"
                android:checked="false"
                android:thumbTint="@color/switch_colors"
                android:trackTint="@color/switch_colors"
                android:clickable="false"/>
            <View
                android:id="@+id/ViewLinha2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="450dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                />
            <TextView
                android:id="@+id/textViewDesativar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Caso desativar, o valor não será considerado no saldo do mês."
                android:layout_marginTop="455dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                />
            <TextView
                android:id="@+id/textViewDescricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descrição"
                android:layout_below="@+id/textViewDesativar"
                android:layout_marginTop="20dp"
                android:textSize="25dp"
                android:layout_marginStart="20dp"/>
            <TextView
                android:id="@+id/Descricao_do_registro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_below="@+id/textViewDescricao"
                android:layout_marginStart="20dp"
                />
            <Button
                android:id="@+id/ir_para_editar_despesas"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="690dp"
                android:background="@drawable/linha_btn_despesa"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Editar Registro"
                android:textColor="@color/black"
                android:textSize="30dp"/>
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
