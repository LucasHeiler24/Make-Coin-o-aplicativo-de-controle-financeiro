<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".view.CadastroUsuarios.CadastroUsuarios"
            android:background="@color/white">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/retangulo_redondo"
                    android:backgroundTint="#000044"/>

                <ImageView
                    android:id="@+id/Voltar_tela_inicial"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="370dp"
                    app:tint="#ffff"
                    android:src="@drawable/setaesquerda"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:text="Registrar categoria receita"
                    android:textAlignment="center"
                    android:layout_marginStart="15dp" />
                <View
                    android:id="@+id/retangulo_receita"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="130dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginEnd="90dp"
                    android:background="@drawable/retangulo_tela_principal"
                    android:backgroundTint="#330066"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total ganho:"
                    android:textColor="@color/white"
                    android:layout_marginTop="140dp"
                    android:textAlignment="center"
                    android:textSize="30dp"/>
                <EditText
                    android:id="@+id/valor_da_receita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="45dp"
                    android:hint="R$ 0,00"
                    android:focusable="true"
                    android:textAlignment="center"
                    android:inputType="numberDecimal"
                    style="@style/EditTextNoBackground"
                    android:textAppearance="@style/HintStyLE2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nome do favorecido:"
                    android:textSize="25dp"
                    android:layout_marginTop="310dp"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/Nome_do_favorecido_receita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="350dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/auto_completa_texto_favorecido_receita"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ex: WEG"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"/>

                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* Nome da receita:"
                    android:textSize="25dp"
                    android:layout_marginTop="430dp"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/Nome_da_receita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="470dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/auto_completa_texto_receita"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ex: Despesas com remédios"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"/>

                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descrição:"
                    android:textSize="25dp"
                    android:layout_marginTop="550dp"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"/>
                <EditText
                    android:id="@+id/Descricao_da_receita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="600dp"
                    style="@style/EditTextNoBackgroundRounded"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:maxLength="100"
                    android:hint="Ex: Recebimento do salário do mês"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* Data:"
                    android:textSize="25dp"
                    android:layout_marginTop="680dp"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_marginTop="790dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/calendario"
                    android:layout_marginTop="735dp"
                    android:layout_marginStart="15dp"/>
                <Button
                    android:id="@+id/registrar_hoje_data_efetuacao"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="Hoje"
                    android:textSize="20dp"
                    android:layout_marginTop="725dp"
                    android:layout_marginStart="70dp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/button_background_selector"
                    android:onClick="registrarHojeDataEfetuacaoButton"/>
                <Button
                    android:id="@+id/abrir_calendario_data_efetuacao"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="Outros"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="725dp"
                    android:layout_marginStart="200dp"
                    android:backgroundTint="@color/button_background_selector"/>
                <TextView
                    android:id="@+id/data_efetuacao_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginTop="735dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="70dp"/>
                <Button
                    android:id="@+id/limpar_data_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Limpar data"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/button_background_selector"
                    android:layout_marginTop="716dp"
                    android:layout_marginStart="200dp"
                    android:visibility="gone"
                    android:onClick="limparDataEfetuacaoButton"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Já recebi"
                    android:layout_marginTop="825dp"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"/>
                <Switch
                    android:id="@+id/toggleSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="830dp"
                    android:layout_marginStart="350dp"
                    android:checked="false"
                    android:thumbTint="@color/switch_colors2"
                    android:trackTint="@color/switch_colors2"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_marginTop="890dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Caso desativar, o valor do ganho não será considerado no saldo do mês."
                    android:layout_marginTop="900dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* Categoria:"
                    android:layout_marginTop="950dp"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="@drawable/retangulo_para_as_telas_categorias"
                    android:layout_marginTop="1000dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"/>
                <ImageView
                    android:id="@+id/Circulo_cor"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/imagem_redonda"
                    app:tint="#17C245"
                    android:layout_marginTop="1020dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="15dp"/>
                <ImageView
                    android:id="@+id/Ir_para_tela_escolher_categorias_receitas"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/setadireita"
                    app:tint="#00A43F"
                    android:layout_marginTop="1030dp"
                    android:layout_marginStart="340dp"
                    android:layout_marginEnd="15dp"/>
                <ImageView
                    android:id="@+id/categoria_de_salario"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/categoriasalario"
                    android:layout_marginTop="1025dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="15dp"/>
                <TextView
                    android:id="@+id/categoria_salario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1030dp"
                    android:textSize="25dp"
                    android:text="Selecionar categoria"
                    android:textColor="@color/black"
                    android:layout_marginStart="90dp"/>
                <Button
                    android:id="@+id/Registrar_receita"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Registrar"
                    android:background="@drawable/linha_btn_despesa"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="1130dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp" />
            </FrameLayout>
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/selecionar_categorias"
        android:background="@color/white"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:itemTextAppearanceActive="@style/BottomNavigationTextActive"
        app:itemTextAppearanceInactive="@style/BottomNavigationTextInactive"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:outlineProvider="none"
        app:labelVisibilityMode="labeled"
        app:layout_constraintTop_toBottomOf="@id/nestedScrollView"
        style="@style/Widget.BottomNavigationView"/>

</androidx.constraintlayout.widget.ConstraintLayout>
