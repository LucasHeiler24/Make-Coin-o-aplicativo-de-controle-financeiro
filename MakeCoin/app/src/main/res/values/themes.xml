<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MakeCoin" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MakeCoin" parent="Base.Theme.MakeCoin" />

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="BottomNavigationTextActive">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomNavigationTextInactive">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="EditTextNoBackground" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginTop">190dp</item>
        <item name="android:outlineProvider">@null</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/red</item> <!-- Defina a cor vermelha aqui -->
    </style>
    <style name="HintStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/red</item> <!-- Defina a cor vermelha aqui -->
    </style>
    <style name="EditTextNoBackgroundRounded">
        <item name="android:background">@drawable/edittext_rounded_bg</item> <!-- Define a forma personalizada como fundo -->
        <item name="android:padding">16dp</item> <!-- Define o espaÃ§amento interno (padding) -->
    </style>
</resources>