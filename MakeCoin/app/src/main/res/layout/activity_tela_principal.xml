<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".view.CadastroUsuarios.CadastroUsuarios">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@drawable/retangulo_redondo"
                    android:backgroundTint="#000044"/>

                <ImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="27dp"
                    android:src="@drawable/fotousuario"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/saudacaoNomeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textAlignment="textEnd"
                    android:layout_marginEnd="30dp"/>
                <TextView
                    android:id="@+id/saldoAtual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Saldo atual"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="160dp"
                    android:textSize="20dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="80dp"/>
                <TextView
                    android:id="@+id/valorAtual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="R$ 0,00"
                    android:textColor="@color/white"
                    android:layout_marginTop="190dp"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginStart="60dp"
                    android:layout_marginEnd="80dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ver registros"
                    android:textColor="@color/white"
                    android:layout_marginTop="175dp"
                    android:textSize="20dp"
                    android:layout_marginStart="220dp"
                   />
                <ImageView
                    android:id="@+id/ir_para_tela_registros"
                    android:layout_width="30dp"
                    android:layout_height="80dp"
                    android:src="@drawable/setadireita"
                    app:tint="@android:color/white"
                    android:layout_marginTop="150dp"
                    android:layout_marginStart="340dp"/>
                <ImageView
                    android:id="@+id/menuHamburguer"
                    android:layout_width="30dp"
                    android:layout_height="80dp"
                    android:src="@drawable/configuracoes"
                    app:tint="@android:color/white"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="360dp"/>
                <View
                    android:id="@+id/retangulo_dos_valores"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="230dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/retangulo_tela_principal"
                    android:backgroundTint="#330066"/>
                <View
                    android:id="@+id/retangulo_valor_acima"
                    android:layout_width="180dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="290dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/retangulo_valores_acima_e_abaixo" />
                <View
                    android:id="@+id/retangulo_valor_baixo"
                    android:layout_width="180dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="290dp"
                    android:layout_marginStart="210dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/retangulo_valores_acima_e_abaixo" />
                <ImageView
                    android:id="@+id/seta_acima_grafico"
                    android:layout_width="30dp"
                    android:layout_height="80dp"
                    android:src="@drawable/acima"
                    app:tint="#2DD051"
                    android:layout_marginTop="320dp"
                    android:layout_marginStart="30dp"/>
                <ImageView
                    android:id="@+id/seta_abaixo_grafico"
                    android:layout_width="30dp"
                    android:layout_height="80dp"
                    android:src="@drawable/abaixo"
                    app:tint="#D02D2D"
                    android:layout_marginTop="320dp"
                    android:layout_marginStart="345dp"/>
                <TextView
                    android:id="@+id/valor_receitas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="300dp"
                    android:textSize="30dp"
                    android:textColor="#25BF25"
                    android:textAlignment="center"
                    android:layout_marginEnd="210dp"
                    android:layout_marginStart="30dp"/>
                <TextView
                    android:id="@+id/valor_despesas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="300dp"
                    android:textSize="30dp"
                    android:textColor="#D61117"
                    android:textAlignment="center"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="220dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="360dp"
                    android:textSize="20dp"
                    android:text="Despesas"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="230dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="360dp"
                    android:textSize="20dp"
                    android:text="Receitas"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="90dp"/>
            </FrameLayout>

            <TextView
                android:id="@+id/mesSelecionadoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="20dp"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="250dp"/>

            <ImageView
                android:id="@+id/setaBaixoImageView"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/setaabaixo"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="100dp"
                android:layout_marginTop="250dp"
                app:tint="@color/white"
                />
            <TextView
                android:id="@+id/meusPagamentosMensais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seus pagamentos mensais do mÃªs"
                android:layout_marginTop="440dp"
                android:textSize="20dp"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineDespesas"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintGuide_percent="0.6"
                />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="500dp"
                app:layout_constraintTop_toBottomOf="@id/guidelineDespesas">

                <LinearLayout
                    android:id="@+id/layoutDespesasContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:id="@+id/meusPagamentosRecorrentes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seus pagamentos recorrentes do mÃªs"
                android:layout_marginTop="660dp"
                android:textSize="20dp"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineDespesasRecorrentes"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintGuide_percent="0.6"
                />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="720dp"
                app:layout_constraintTop_toBottomOf="@id/guidelineDespesasRecorrentes">

                <LinearLayout
                    android:id="@+id/layoutDespesasRecorrentesContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:id="@+id/textViewDasUltimasDespesas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ãltimos registros das despesas"
                android:layout_marginTop="890dp"
                android:textSize="23dp"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineRegistrosUltimos"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintGuide_percent="0.6"
                />
                <LinearLayout
                    android:id="@+id/layoutUltimosRegistros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="930dp">
                </LinearLayout>
            <TextView
                android:id="@+id/textViewUltimosRegistrosReceitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ãltimos registros das receitas"
                android:layout_marginTop="30dp"
                android:textSize="23dp"
                android:layout_below="@+id/layoutUltimosRegistros"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineRegistrosUltimosReceitas"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintGuide_percent="0.6"
                />
            <LinearLayout
                android:id="@+id/layoutUltimosRegistrosReceitas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewUltimosRegistrosReceitas"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
            </LinearLayout>
            <TextView
                android:id="@+id/textViewReceitasUltimas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/textViewUltimosRegistrosReceitas"
                android:textSize="16dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/textViewDespesasUltimas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/textViewDasUltimasDespesas"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="25dp"/>

            <TextView
                android:id="@+id/textViewPagamentosRecorrentes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/meusPagamentosRecorrentes"
                android:textSize="16dp"
                android:layout_marginTop="80dp"
                android:layout_marginStart="25dp"/>

            <TextView
                android:id="@+id/textViewPagamentosMensais"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/meusPagamentosMensais"
                android:textSize="16dp"
                android:layout_marginTop="80dp"
                android:layout_marginStart="25dp"/>
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:itemIconSize="45dp"
        android:background="#000044"
        app:itemIconTint="@color/selector_bottom_navigation_icon"
        app:menu="@menu/navegacao"
        android:outlineProvider="none"
        app:labelVisibilityMode="labeled"
        style="@style/Widget.BottomNavigationView"/>


</androidx.constraintlayout.widget.ConstraintLayout>
